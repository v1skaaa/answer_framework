{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/login/index",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationBarBackgroundColor": "#FFFFFF"
			}
		},
		{
			"path": "pages/register/index",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页", // 页面顶部显示"刷题首页"
				"enablePullDownRefresh": true // 允许用户下拉页面触发刷新
			}
		},
		{
			"path": "pages/exercise/index",
			"style": {
				"navigationBarTitleText": "习题"
			}
		},
		{
			"path": "pages/test/index",
			"style": {
				"navigationBarTitleText": "试卷"
			}
		},
		{
			"path": "pages/test/gaokaoZhenti/index",
			"style": {
				"navigationBarTitleText": "高考真题",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/test/qimo/index",
			"style": {
				"navigationBarTitleText": "期末考试",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/mine/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path": "pages/exam/intro/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		// 注册答题页面
		{
			"path": "pages/exam/answering/index",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#a6c0fe",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/tab-basic.png",
				"selectedIconPath": "static/images/tab-basic-active.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/exercise/index",
				"iconPath": "static/images/tab-enhanced.png",
				"selectedIconPath": "static/images/tab-enhanced-active.png",
				"text": "习题"
			},
			{
				"pagePath": "pages/test/index",
				"iconPath": "static/images/tab-mock.png",
				"selectedIconPath": "static/images/tab-mock-active.png",
				"text": "试卷"
			},
			{
				"pagePath": "pages/mine/index",
				"iconPath": "static/images/tab-mine.png",
				"selectedIconPath": "static/images/tab-mine-active.png",
				"text": "个人中心"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "刷题助手",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
